<div id="dark-theme">
    <p>Tema</p>
    <label class="switch">
        <input id="toggle-theme-button" type="checkbox">
        <span class="slider"></span>
    </label>
</div>

<script>
    const toggleButton = document.querySelector("#toggle-theme-button");
    const body = document.querySelector("body");

    // Verifique se há uma preferência de tema armazenada
    const theme = localStorage.getItem("theme") || "light";

    // Define o tema inicial da página
    body.classList.add(theme);

    // Adicione ou remova a classe "dark" ao clicar no botão
    toggleButton.addEventListener("click", function () {
        if (body.classList.contains("light")) {
            body.classList.replace("light", "dark");
            localStorage.setItem("theme", "dark");
        } else {
            body.classList.replace("dark", "light");
            localStorage.setItem("theme", "light");
        }
    });
</script>

<style>

    #dark-theme p {
        margin: 0;
        margin-right: 5px;
    }
    body.light {
        background-color: #ffffff;
        color: #000000;
    }

    body.dark {
        background-color: #161616;
        color: #ffffff;
    }

    .switch {
        font-size: 13px;
        position: relative;
        display: inline-block;
        width: 3.5em;
        height: 2em;
    }

    /* Esconde o checkbox padrão */
    .switch input {
        opacity: 0;
        width: 0;
        height: 0;
    }

    /* Slide da lua pro sol */
    .slider {
        --background: #252525;
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: var(--background);
        transition: .5s;
        border-radius: 30px;
    }

    .slider:before {
        position: absolute;
        content: "";
        height: 1.4em;
        width: 1.4em;
        border-radius: 50%;
        left: 10%;
        bottom: 15%;
        box-shadow: inset 8px -4px 0px 0px #ffffff;
        background: var(--background);
        transition: .5s;
    }

    input:checked+.slider {
        background-color: whitesmoke;
        box-shadow: 0px 0px 5px 1px grey;
    }

    input:checked+.slider:before {
        transform: translateX(100%);
        box-shadow: inset 15px -4px 0px 15px #0e0e0e;
    }

</style>
